@model DACS.Models.Ram

@{
    ViewData["Title"] = "Details";
    Layout = "_DashBoardAdmin";
}

<div class="container-fluid py-4">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Chi tiết</h5>
            <div>
                <h4>Ram</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">Tên Ram</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.TenRam)</dd>
                </dl>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.MaRam" class="btn btn-primary">Chỉnh sửa</a>
                <a asp-action="Index" class="btn btn-secondary">Trở về</a>
            </div>
        </div>
    </div>
</div>
