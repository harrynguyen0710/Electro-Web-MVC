@model IEnumerable<WebDT.Models.TrangThaiThanhToan>

@{
    ViewData["Title"] = "Index";
    Layout = "_DashBoardAdmin";
}

<h1>Danh sách trạng thái thanh toán </h1>

<p>
    <a asp-action="Create">Thêm mới</a>
<table class="table">
    <thead>
        <tr>
            <th>
                Tên trạng thái thái thanh toán
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenTrangThaiThanhToan)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaTrangThaiThanhToan">Chỉnh sửa</a> |
                <a asp-action="Delete" asp-route-id="@item.MaTrangThaiThanhToan">Xóa</a>

            </td>
        </tr>
}
    </tbody>
</table>
