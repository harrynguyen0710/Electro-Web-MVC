@{
    Layout = "_DashBoardAdmin";
}
@model DACS.ViewModel.iPadViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Details</title>
</head>
<body>
    <div style="background-color: #ffffff; display:flex; flex-direction:row;">
        <div>
            <h1>Product Information</h1>
            <p><strong>Product name:</strong> @Model.Ipad.TenSanPham</p>
            <p><strong>Product: </strong> @Model.LoaiSanPhamDacBiet</p>
            <p><strong>Capacity:</strong> @Model.DungLuongBoNho</p>
            <p><strong>Color:</strong> @Model.TenMauSac</p>
            <p><strong>RAM:</strong> @Model.TenRam</p>
            <p><strong>Brand:</strong> @Model.TenThuongHieu</p>
            <p><strong>Resolution:</strong> @Model.Ipad.DoPhanGiai</p>
            <p><strong>Screen technology:</strong> @Model.Ipad.CongNgheManHinh</p>
            <p><strong>Physical size:</strong> @Model.Ipad.KichThuocVatLy</p>

            @*    <p><strong>Product Category:</strong> @Model.MaLoaiSanPham</p>
            *@
            <h2>Product image</h2>
            @if (Model.TenHinhAnh != null && Model.TenHinhAnh.Any())
            {
                <div>
                    @foreach (var image in Model.TenHinhAnh)
                    {
                        <img src="~/Images/@image" alt="Product Image" />
                    }
                </div>
            }
            else
            {
                <p>No images available for this product.</p>
            }

        </div>
        <div>
            <div style="width:180px;  height:40px; text-align:center; margin-top:30px;" class="btn btn-primary">
                <a style="color: #ffffff;" asp-area="Admin" asp-controller="iPad" asp-action="Index">Back</a>
            </div>
            <div style="width:180px;  height:40px; text-align:center; margin-top:30px;" class="btn btn-behance">
                <a style="color: #ffffff;" asp-area="Admin" asp-controller="iPad" asp-action="Edit" asp-route-MaSanPham="@Model.Ipad.MaSanPham">Edit</a>
            </div>
        </div>
    </div>

</body>
</html>

