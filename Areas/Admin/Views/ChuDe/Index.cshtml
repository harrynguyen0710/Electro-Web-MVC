@model IEnumerable<DACS.Models.ChuDe>

@{
    ViewData["Title"] = "Index";
    Layout = "_DashBoardAdmin";

}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenChuDe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mota)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenChuDe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mota)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaChuDe">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.MaChuDe">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.MaChuDe">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>