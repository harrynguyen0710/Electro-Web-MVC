@{
    Layout = "_DashBoardAdmin";
}
@model DACS.Models.Iphone;

<!DOCTYPE html>
<html>
<head>
    <title>Details</title>
</head>
<body>
    <div style="background-color: #ffffff; display:flex; flex-direction:row;">
        <div>
            <h1>Product information</h1>
            <p><strong>Product name:</strong> @Model.TenSanPham</p>
            <p><strong>Capacity:</strong> @Model.BoNho.DungLuongBoNho</p>
            <p><strong>Product: </strong> @Model.LoaiSanPham.TenLoaiSanPham</p>
            <p><strong>Color:</strong> @Model.MauSac.TenMau</p>
            <p><strong>RAM:</strong> @Model.Ram.TenRam</p>
            <p><strong>Brand:</strong> @Model.ThuongHieu.TenThuongHieu</p>
            <p><strong>Chip:</strong> @Model.Chip</p>
            <p><strong>Rom:</strong> @Model.Rom</p>
            <p><strong>Front Camera :</strong> @Model.CameraTruoc</p>
            <p><strong>Back Camera :</strong> @Model.CameraSau</p>
            <p><strong>Pin:</strong> @Model.Pin</p>
            <p><strong>Warranty:</strong> @Model.ThoiHanBaoHanh</p>

            <h2>Product image</h2>
            @if (Model.HinhAnh != null)
            {
                <div>
                    @foreach (var image in Model.HinhAnh)
                    {
                        <img src="~/Images/@image.FileHinhAnh" alt="Product Image" />
                    }
                </div>
            }
            else
            {
                <p>No images available for this product.</p>
            }

        </div>
        <div>
            <div style="width:180px;  height:40px; text-align:center; margin-top:30px;" class="btn btn-primary">
                <a style="color: #ffffff;" asp-area="Admin" asp-controller="Iphone" asp-action="Index">Back</a>
            </div>
        </div>
    </div>
    
</body>
</html>

