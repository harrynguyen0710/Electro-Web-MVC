@model DACS.Models.BoNho

@{
    ViewData["Title"] = "Delete";
    Layout = "_DashBoardAdmin";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Xóa dung lượng bộ nhớ</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Delete">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="DungLuongBoNho" class="control-label">Dung lượng bộ nhớ</label>
                            <input asp-for="DungLuongBoNho" class="form-control" readonly />
                            <span asp-validation-for="DungLuongBoNho" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger">Xóa</button>
                            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
