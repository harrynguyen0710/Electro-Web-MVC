@model IEnumerable<DACS.Models.TinTuc>

@{
    ViewData["Title"] = "Index";
    Layout = "_DashBoardAdmin";

}

<div style="background-color:#ffffff;">
    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.MaTinTuc)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TieuDe)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HinhAnh)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TomTat)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ChuDe)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaTinTuc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TieuDe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HinhAnh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TomTat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChuDe.TenChuDe)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaTinTuc">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.MaTinTuc">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.MaTinTuc">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>

</div>
