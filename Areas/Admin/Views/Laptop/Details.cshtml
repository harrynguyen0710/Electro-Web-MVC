@{
    Layout = "_DashBoardAdmin";
}
@model WebDT.ViewModel.LaptopViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Details</title>
</head>
<body>
    <div style="background-color: #ffffff; display:flex; flex-direction:row;">
        <div>
            <h1>Thông tin sản phẩm</h1>
            <p><strong>Tên sản phẩm:</strong> @Model.Laptop.TenSanPham</p>
            <p><strong>Sản phẩm: </strong> @Model.LoaiSanPhamDacBiet</p>
            <p><strong>Dung lượng:</strong> @Model.DungLuongBoNho</p>
            <p><strong>Màu sắc:</strong> @Model.TenMauSac</p>
            <p><strong>RAM:</strong> @Model.TenRam</p>
            <p><strong>Thương hiệu:</strong> @Model.TenThuongHieu</p>
            <p><strong>CPU:</strong> @Model.Laptop.CPU</p>
            <p><strong>Số nhân luồng:</strong> @Model.Laptop.SoNhanLuong</p>
            <p><strong>VGA:</strong> @Model.Laptop.VGA</p>
            <p><strong>Trọng lượng</strong> @Model.Laptop.TrongLuong</p>
            

            @*    <p><strong>Product Category:</strong> @Model.MaLoaiSanPham</p>
            *@
            <h2>Hình ảnh sản phẩm</h2>
            @if (Model.TenHinhAnh != null && Model.TenHinhAnh.Any())
            {
                <div>
                    @foreach (var image in Model.TenHinhAnh)
                    {
                        <img src="~/Images/@image" alt="Product Image" />
                    }
                </div>
            }
            else
            {
                <p>No images available for this product.</p>
            }

        </div>
        <div>
            <div style="width:180px;  height:40px; text-align:center; margin-top:30px;" class="btn btn-primary">
                <a style="color: #ffffff;" asp-area="Admin" asp-controller="Laptop" asp-action="Index">Quay lại</a>
            </div>
            <div style="width:180px;  height:40px; text-align:center; margin-top:30px;" class="btn btn-behance">
                <a style="color: #ffffff;" asp-area="Admin" asp-controller="Laptop" asp-action="Edit" asp-route-MaSanPham="@Model.Laptop.MaSanPham">Chỉnh sửa</a>
            </div>
        </div>
    </div>

</body>
</html>

