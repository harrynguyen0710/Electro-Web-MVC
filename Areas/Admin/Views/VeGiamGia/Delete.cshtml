@model DACS.Models.VeGiamGia

@{
    ViewData["Title"] = "Delete";
    Layout = "_DashBoardAdmin";
}

<h1>Xóa mã giảm giá</h1>

<h3>Bạn có chắc chắn muốn xóa không?</h3>
<div>
    <h4>Mã giảm giá </h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class="col-sm-2">
            Ngày tạo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NgayThietLap)
        </dd>
        <dt class="col-sm-2">
            Số lượng sử dụng tối đa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SoLuongToiDaSuDung)
        </dd>
        <dt class="col-sm-2">
            Tỷ lệ giảm
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TyleGiam)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="MaVeGiamGia" />
        <button type="submit" class="btn btn-danger">Xóa</button> |
        <a asp-action="Index" class="btn btn-secondary">Trở về</a>
    </form>
</div>
