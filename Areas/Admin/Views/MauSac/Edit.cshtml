@model DACS.Models.MauSac

@{
    ViewData["Title"] = "Edit";
    Layout = "_DashBoardAdmin";
}

<div class="container mt-5">
    <h1>Chỉnh sửa màu sắc</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MaMauSac" />
                <div class="form-group">
                    <label for="TenMau" class="control-label">Tên màu</label>
                    <input asp-for="TenMau" class="form-control" />
                    <span asp-validation-for="TenMau" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="container mt-3">
    <a asp-action="Index" class="btn btn-secondary">Trở về</a>
</div>
