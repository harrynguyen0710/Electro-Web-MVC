@model IEnumerable<DACS.Models.MauSac>

@{
    ViewData["Title"] = "Index";
    Layout = "_DashBoardAdmin";
}

<div class="container-fluid py-4">
    <div class="row justify-content-between" style="background-color: #ffffff; border-radius: 9px; padding: 20px;">
        <div class="col-md-8">
            <h1 class="mb-4">Danh sách màu</h1>
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Màu sắc</th>
                        <th scope="col">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TenMau</td>
                            <td>
                                <a class="btn btn-primary mr-2" asp-route-id="@item.MaMauSac" asp-action="Edit">Chỉnh sửa</a>
                                <a class="btn btn-danger" asp-route-id="@item.MaMauSac" asp-action="Delete">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-4 d-flex align-items-end justify-content-end mt-auto">
            <a asp-action="Create" class="btn btn-success">
                <i class="fa-solid fa-plus" style="font-size: 20px;"></i>
                Thêm mới
            </a>
        </div>
    </div>
</div>
