@using DACS.Models
@using DACS.ViewModel
@model DonHangViewModel

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Techzone</title>
        <link rel="stylesheet" href="~/assets/product-style.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;300&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
        <script src="./assets/script.js" defer></script>


    </head>
    <body>
        <div>
            <form method="get" asp-controller="KiemTraDonHang" asp-action="ThongTinDonHang">
                <div style="border-radius: 12px; height: 500px ; width:95%; background-color: #f4f6f9; display:flex; flex-direction:row; justify-content:center; align-items:center">
                    <div>
                        <img src="~/assets/images/TGDD-540x270.png" />
                    </div>
                    <div style="background-color:#ffffff; height: 400px; width:600px; border-radius:14px; display:flex; flex-direction:column; justify-content:center; align-items:center;">
                        <p style="font-size:25px; font-weight:350;">Tra cứu thông tin đơn hàng</p>
                        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                        {
                            <div style="color: red;">
                                @ViewBag.ErrorMessage
                            </div>
                        }
                        <div style="display: flex; flex-direction: row; border: 1px solid gray; border-radius: 30px; margin-top:30px;">
                            <i class="fa-solid fa-phone" style="color: #18a0c6; transform:translate(11px,12px);"></i>
                            <div style="height: 40px; width:300px; margin-left: 15px;">
                                <input name="phoneNumber" id="phoneNumber" style="outline: none; border:none; height: 100%; width: 80%;" placeholder="Nhập số điện thoại" />
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Tìm kiếm" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </body>
</html>
