@using DACS.Models
@using DACS.ViewModel
@model DonHangViewModel
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/stylescart.css">
</head>
<body>
    <form method="get" asp-controller="KiemTraDonHang" asp-action="ThongTinDonHang">
        <div style="border-radius: 12px; height: 500px ; width:95%; background-color: #f4f6f9; display:flex; flex-direction:row; justify-content:center; align-items:center">
            <div>
                <img src="~/assets/images/TGDD-540x270.png" />
            </div>
            <div style="background-color:#ffffff; height: 400px; width:600px; border-radius:14px; display:flex; flex-direction:column; justify-content:center; align-items:center;">
                <p style="font-size:25px; font-weight:350;">Tra cứu thông tin đơn hàng</p>
                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div style="color: red;">
                        @ViewBag.ErrorMessage
                    </div>
                }
                <div style="display: flex; flex-direction: row; border: 1px solid gray; border-radius: 30px; margin-top:30px;">
                    <i class="fa-solid fa-phone" style="color: #18a0c6; transform:translate(11px,12px);"></i>
                    <div style="height: 40px; width:300px; margin-left: 15px;">
                        <input name="phoneNumber" id="phoneNumber" style="outline: none; border:none; height: 100%; width: 80%;" placeholder="Nhập số điện thoại" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Tìm kiếm" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>
</html>
