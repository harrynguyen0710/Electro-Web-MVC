@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Techzone</title>
    <link rel="icon" href="img/favicon.png">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <!-- animate CSS -->
    <link rel="stylesheet" href="css/animate.css">
    <!-- owl carousel CSS -->
    <link rel="stylesheet" href="css/owl.carousel.min.css">
    <!-- font awesome CSS -->
    <link rel="stylesheet" href="css/all.css">
    <!-- flaticon CSS -->
    <link rel="stylesheet" href="css/flaticon.css">
    <link rel="stylesheet" href="css/themify-icons.css">
    <!-- font awesome CSS -->
    <link rel="stylesheet" href="css/magnific-popup.css">
    <!-- swiper CSS -->
    <link rel="stylesheet" href="css/slick.css">
    <!-- style CSS -->
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    @*container*@
    <div style="display:flex; flex-direction:column; justify-content:center; align-items:center;">
        <div style="height:490px; width:950px; background-color: #ffffff; margin:30px 0 0 50px; display:flex; flex-direction: row; justify-content:space-between; border-radius: 15px;">
            <div style="display:flex; flex-direction:column; margin: 45px 0 0 40px;">
                <div style="display:flex; flex-direction: row;">
                    <div style="margin-right:20px;">
                        <img style="border-radius:100%; height: 80px; width: 80px;" src="~/assets/images/8317ad01ae57a6d0af315d0ac1df50b4.jpg" />
                    </div>
                    <div>
                        <h2 style="font-weight:450; color:#333333;">Techzone</h2>
                        <p style="color:#33485c; margin-top:10px;">Công nghệ & Thiết bị</p>
                        <div>
                            <i class="fa-regular fa-comment" style="color: #ffffff; transform:translate(90px,33px);"></i>
                            <div style="background-color: #0068ff; height: 50px; width: 300px; border-radius: 15px;">
                                <button style="cursor:pointer; border-radius:15px;outline:none; border:none; color:#ffffff; font-weight: 520; font-size:17px; background-color:#0068ff; height:100%; width:100%;">Nhắn tin</button>
                            </div>

                        </div>
                    </div>
                </div>
                <div style="display:flex; flex-direction:column; margin-top:30px; ">
                    <h3 style="color: #333333; font-weight: 450; font-size:20px;">Thông tin chi tiết</h3>
                    <ul style="text-decoration:none; margin-top:15px; transform:translateX(-30px);">
                        <li style="display:flex; flex-direction:row;">
                            <i class="fa-solid fa-location-dot" style="color: #33485c; "></i>
                            <p style="margin: 0 0 10px 16px; color: #33485c;">8C, Tống Hữu Định, Phường Thảo Điền, TP Thủ Đức</p>
                        </li>
                        <li style="display:flex; flex-direction:row;">
                            <i class="fa-solid fa-phone" style="color: #33485c;"></i>
                            <p style="margin: 0 0 10px 12px; color: #33485c;">19009000</p>
                        </li>
                        <li style="display:flex; flex-direction:row;">
                            <i class="fa-regular fa-clock" style="color: #33485c;"></i>
                            <p style="margin: 0 0 10px 12px; color:#33485c;"><span style="color:#47bd8e; font-weight:450; margin-right:10px;">Đang mở cửa </span> Đóng cửa lúc 17:00</p>
                        </li>
                        <li style="display:flex; flex-direction:row;">
                            <i class="fa-solid fa-house" style="color: #33485c;"></i>
                            <a style="margin: 0 0 10px 12px; color:#0068ff;" href="https://localhost:7172/">https://localhost:7172/</a>
                        </li>
                    </ul>
                    <hr style="margin:25px 0;" />
                    <p style="color:#33485c; font-size:14px;">Chuyên các mặt hàng công nghệ cao cấp</p>
                </div>
            </div>
            @*QR code*@
            <div style="margin: 30px 50px 0 0;">
                <img style="height:200px; width:200px;" src="~/assets/images/download (1).jpg" />
            </div>
        </div>
    </div>

</body>
</html>
