@model IEnumerable<DACS.Models.ChuDe>
<aside class="single_sidebar_widget post_category_widget">
    <h4 class="widget_title">Category</h4>
    <ul class="list cat-list">
        @foreach (var topic in Model)
        {
            <li>
                <a asp-controller="Home" asp-action="BlogCategoryByTopic" asp-route-id="@topic.MaChuDe" class="d-flex">
                    <p>@topic.TenChuDe</p>
                    <p>(37)</p>
                </a>
            </li>
        }
    </ul>
</aside>
