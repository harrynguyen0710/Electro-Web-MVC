<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Techzone</title>
    <link rel="stylesheet" href="./css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;300&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <script src="./assets/script.js" defer></script>
    <style>
        .messenger-icon {
            position: fixed;
            bottom: 20px;
            right: 20px;
            z-index: 1000;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="nav-bar">
            <nav class="nav-bar-1">
                <a asp-controller="Home" asp-action="Index"><img src="~/image-banner/banner/logor.png" /></a>
                <div class="pag news-pag">TIN TỨC</div>
                <div class="pag branch-pag">THƯƠNG HIỆU</div>
                <div class="searching-input-area">
                    <form id="searchForm" action="@Url.Action("Index","Home")" method="get" style="width:85%" class="d-none d-md-flex">

                        <input class="searching-input" type="text" placeholder="Nhập từ khoá tìm kiếm" />

                        <button class="searching-btn">
                            <i class="fa-solid fa-magnifying-glass" style="color: #ffffff;"></i>

                        </button>
                    </form>

                </div>
                <div class="btn-check">
                    <a asp-controller="KiemTraDonHang" asp-action="Index" style="text-decoration:none; display:flex; flex-direction:row;">
                        <i class="fa-solid fa-clipboard-list" style="font-size: 26px; color:#575757;"></i>
                        <p>Kiểm tra đơn hàng</p>
                    </a>
                </div>
                <div class="btn-check">
                    <i class="fa-regular fa-calendar" style="font-size: 26px; color:#575757;"></i>
                    <p>Kiểm tra bảo hành</p>
                </div>
                <div>
                    <i class="fa-solid fa-user" style="color: #333333; font-size: 20px; cursor:pointer;"></i>
                </div>
                <div style="transform: translateX(-40px);">
                    <a href="/Cart">
                        <i class="fa-solid fa-cart-shopping" style="color: #333333; font-size:20px; cursor:pointer;"></i>
                    </a>

                </div>
                <div class="messenger-icon">
                    <i class="fab fa-facebook-messenger" style="color: #007bff; font-size: 40px;"></i>
                </div>
            </nav>
            <nav class="nav-bar-2">
                <div>Mac</div>
                <div>iPad</div>
                <div>iPhone</div>
                <div>TV & Nhà</div>
                <div>Watch</div>
                <div>AirPods</div>
                <div>Phụ kiện</div>
                <div>Hỗ trợ</div>
            </nav>
        </div>
        <div class="main">

            @RenderBody()

        </div>


        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
