@model DACS.Models.BinhLuan;
@if (User.Identity.IsAuthenticated)
{
    <div class="row contact_form" action="contact_process.php" novalidate="novalidate">
        <div class="col-md-12">
            <div style="padding: 10px 0; width: 100%; border-radius: 5px; font-size: 14px;">Đánh giá: @Model.DanhGia.DiemDanhGia sao</div>
            <div class="form-group">
                <textarea readonly style="height:100px; width:550px;" class="form-control" name="message" rows="1" placeholder="Review">@Model.NoiDungBinhLuan</textarea>
            </div>
        </div>

    </div>
}
