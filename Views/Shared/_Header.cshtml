<title>Techzone</title>
<link rel="icon" href="~/favicon.png">
<link rel="stylesheet" href="~/css/bootstrap.min.css">
<link rel="stylesheet" href="~/css/animate.css">
<link rel="stylesheet" href="~/css/owl.carousel.min.css">
<link rel="stylesheet" href="~/css/all.css">
<link rel="stylesheet" href="~/css/flaticon.css">
<link rel="stylesheet" href="~/css/themify-icons.css">
<link rel="stylesheet" href="~/css/magnific-popup.css">
<link rel="stylesheet" href="~/css/slick.css">
<link rel="stylesheet" href="~/css/style.css">
<header class="main_menu home_menu">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                        TECHZONE
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse"
                            data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="menu_icon"><i class="fas fa-bars"></i></span>
                    </button>

                    <div class="collapse navbar-collapse main-menu-item" id="navbarSupportedContent">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">
                                    Home
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="navbarDropdown_1"
                                   role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Category
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown_1">
                                    <a class="dropdown-item" asp-controller="Home" asp-action="CategoryByProduct" asp-route-category="iphone">
                                        Iphone
                                    </a>
                                    <a class="dropdown-item" asp-controller="Home" asp-action="CategoryByProduct" asp-route-category="imac">
                                        IMac
                                    </a>
                                    <a class="dropdown-item" asp-controller="Home" asp-action="CategoryByProduct" asp-route-category="ipad">
                                        IPad
                                    </a>
                                    <a class="dropdown-item" asp-controller="Home" asp-action="CategoryByProduct" asp-route-category="laptop">
                                        Laptop
                                    </a>
                                </div>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="navbarDropdown_2"
                                   role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Pages
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown_2">
                                    @if (!User.Identity.IsAuthenticated)
                                    {
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Login">
                                            Log in
                                        </a>
                                    }
                                    <a class="dropdown-item" asp-controller="Cart" asp-action="Index">
                                        Shopping Cart
                                    </a>
                                    <a class="dropdown-item" asp-controller="KiemTraDonHang" asp-action="Details">
                                        Cart Details
                                    </a>
                                    <a class="dropdown-item" asp-controller="KiemTraDonHang" asp-action="Index">
                                        Cart Checkout
                                    </a>
                                    <a class="dropdown-item" asp-controller="Home" asp-action="CategoryByProduct">
                                        Product Filter
                                    </a>
                                    <a class="dropdown-item" asp-action="Logout" asp-controller="Account">
                                        Log out</a>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="GetAllBlogs">
                                    Blogs
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="CSKH">
                                    Contact
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="hearer_icon d-flex">
                        <a id="search_1" href="javascript:void(0)"><i class="ti-search"></i></a>
                        <a asp-controller="Wishlist" asp-action="Index"><i class="ti-heart"></i></a>
                        <div class="dropdown cart">
                            <a asp-controller="Cart" asp-action="Index">
                                <i class="fas fa-cart-plus "></i>
                            </a>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    
</header>