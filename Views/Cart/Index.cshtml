<script>
    // Định dạng số có dấu chấm để phân tách hàng nghìn
    function formatCurrency(value) {
        return new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(value);
    }

    // Sử dụng JavaScript để cập nhật giá trị tổng giá trị đơn hàng
    var grandTotalElement = document.getElementById('grandTotal');
    grandTotalElement.textContent = formatCurrency(@Model.GrandTotal);
</script>
