<body>
    <section class="tracking_box_area padding_top">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12">
                    <div class="tracking_box_inner">
                        <p>
                            To track your warranty request please enter your phone number the box below and press the "Track" button. 
                                                    </p>
                        <form asp-controller="WarrantyCheck" asp-action="WarrantyInformation" class="row tracking_form" method="get" novalidate="novalidate">
                            <div class="col-md-12 form-group">
                                <input type="text" class="form-control" name="phoneNumber" id="phoneNumber" placeholder="Phone number">
                            </div>
                            <div class="col-md-12 form-group">
                                <button type="submit" value="submit" class="btn_3">Track Order</button>
                            </div>
                        </form>
                    </div>
                </div>

            </div>

        </div>
    </section>
</body>


