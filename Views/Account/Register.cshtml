@model DACS.ViewModel.RegisterViewModel;
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<body>
    <section class="breadcrumb breadcrumb_bg">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="breadcrumb_iner">
                        <div class="breadcrumb_iner_item">
                            <h2>Tracking Order</h2>
                            <p>Home <span>-</span> Tracking Order</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="login_part padding_top">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-6">
                    <div class="login_part_text text-center">
                        <div class="login_part_text_iner">
                            <h2>New to our Shop?</h2>
                            <p>
                                Already have an acount?
                            </p>
                            <a asp-controller="Account" asp-action="Login" class="btn_3">Login</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="login_part_form">
                        <div class="login_part_form_iner">
                            <h3>
                                Welcome! <br>
                                Let's register
                            </h3>
                            <form method="post">
                                <div class="col-md-12 form-group p_star">
                                    <input asp-for="Email" class="form-control" type="text" required placeholder="Email">
                                    <span asp-validation-for="Email"></span>
                                </div>
                                <div class="col-md-12 form-group p_star">
                                    <input asp-for="UserName" class="form-control" type="text" required placeholder="User name">
                                    <span asp-validation-for="UserName"></span>
                                </div>
                                <div class="col-md-12 form-group p_star">
                                    <input asp-for="Name" class="form-control" type="text" required placeholder="Name">
                                    <span asp-validation-for="Name"></span>
                                </div>
                                <div class="col-md-12 form-group p_star">
                                    <input asp-for="SoDienThoai" class="form-control" type="text" required placeholder="Phone Number">
                                    <span asp-validation-for="SoDienThoai"></span>
                                </div>
                                <div class="col-md-12 form-group p_star">
                                    <input asp-for="DiaChi" class="form-control" type="text" required placeholder="Address">
                                    <span asp-validation-for="DiaChi"></span>
                                </div>
                                <div class="col-md-12 form-group p_star">
                                    <input asp-for="Password" class="form-control" type="password" required placeholder="Password">>
                                    <span asp-validation-for="Password"></span>
                                </div>
                                <div class="col-md-12 form-group">
                                    <button type="submit" value="submit" class="btn_3">
                                        Register
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>




</body>

