@model DACS.ViewModel.LoginViewModel;
@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}
@inject SignInManager<AppUserModel> _signInManager
<body>
    <section class="breadcrumb breadcrumb_bg">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="breadcrumb_iner">
                        <div class="breadcrumb_iner_item">
                            <h2>Tracking Order</h2>
                            <p>Home <span>-</span> Tracking Order</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="login_part padding_top">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-6">
                    <div class="login_part_text text-center">
                        <div class="login_part_text_iner">
                            <h2>New to our Shop?</h2>
                            <p>
                                There are advances being made in science and technology
                                everyday, and a good example of this is the
                            </p>
                            <a asp-controller="Account" asp-action="Register" class="btn_3">Register</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="login_part_form">
                        <div class="login_part_form_iner">
                            <h3>
                                Welcome! <br>
                                Let's log in now
                            </h3>
                            <form method="post">
                                <div class="col-md-12 form-group p_star">
                                    <input asp-for="UserName" class="form-control" type="text" required placeholder="User name">
                                    <span asp-validation-for="UserName"></span>
                                </div>
                                <div class="col-md-12 form-group p_star">
                                    <input asp-for="Password" class="form-control" type="password" required placeholder="Password">>
                                    <span asp-validation-for="Password"></span>
                                </div>
                                <div class="col-md-12 form-group">
                                    <div class="creat_account d-flex align-items-center">
                                        <input type="checkbox" id="f-option" name="selector">
                                        <label for="f-option">Remember me</label>
                                    </div>
                                    
                                    <button type="submit" value="submit" class="btn_3">
                                        Log in
                                    </button>
                                    <a class="lost_pass" href="#">Forgot password?</a>
                                     <br>
                                </div>
                            </form>
                            
                            <div class="login-social">
                                <a style="margin-bottom:100px;">Other login by:</a>

                                @{
                                    var loginProviders = (await _signInManager.GetExternalAuthenticationSchemesAsync()).ToList();
                                    <div style="transform:translateY(15px;)">
                                        <form asp-controller="Account" asp-action="ExternalLogin" method="POST" class="form-horizontal" style="text-align: center" >
                                            @foreach (var provider in loginProviders)
                                            {
                                                if (string.Equals(provider.Name, "google", StringComparison.OrdinalIgnoreCase))
                                                {
                                                    <button style="width:342px;height:55px;" type="submit" class="btn_3" class=" btn btn-google text-uppercase mt-3" name="provider" value="@provider.Name"
                                                            title="Use your account to sign in or register">
                                                    
                                                        <i style="height:14px;width:14px;" class="fab fa-google mr-2"></i>
                                                        @provider.DisplayName
                                                    </button>
                                                }
                                                else if (string.Equals(provider.Name, "facebook", StringComparison.OrdinalIgnoreCase))
                                                {

                                                    <button style="width:342px;height:55px;  transform:translateY(15px);" type="submit" class="btn_3" class="btn btn-facebook text-uppercase" name="provider" value="@provider.Name"
                                                            title="Use your account to sign in or register">
                                                        <i style="height:14px;width:14px;" class="fab fa-facebook mr-2"></i>
                                                        @provider.DisplayName
                                                    </button>
                                                }
                                            }
                                        </form>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>

