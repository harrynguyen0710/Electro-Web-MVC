@model DACS.Models.LoginViewModel;
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="~/css/login.css">
</head>
<body>
    <div class="center">
        <h1>Đăng nhập</h1>
        <form method="post">
            <div class="txt_field">
                <input asp-for="UserName" type="text" required>
                <span asp-validation-for="UserName"></span>
                <label asp-for="UserName"> Username</label>
            </div>
            <div class="txt_field">
                <input asp-for="Password" type="password" required>
                <span asp-validation-for="Password"></span>
                <label asp-for="Password">Mật khẩu</label>
            </div>
            <div class="pass">
            </div>
            <input type="hidden" name="returnUrl" value="@ViewData["returnUrl"]" />
            <a asp-controller="Account" asp-action="Register">Chưa có tài khoản?</a>
            <button type="submit" value="Login">Đăng nhập</button>
            <div class="signup_link">
            </div>
        </form>
       
    </div>

</body>
</html>
